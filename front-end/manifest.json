{
    "manifest_version": 3,
    "name": "VeriScan",
    "description": "The fast fact checking tool with the context menus and the side panel.",
    "version" : "2.0",
    "icons": {"128": "icon.png"},

    "action": {
        "default_icon": "icon.png",
        "default_title": "VeriScan"
    },

    "permissions": [
        "activeTab", 
        "tabs",
        "contextMenus",
        "sidePanel"
    ],

    "host_permissions":["http://140.115.54.36/*"],

    "background": {"service_worker": "background.js"},

    "side_panel":{
        "default_path": "result.html"
    }
}